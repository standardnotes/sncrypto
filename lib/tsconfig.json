{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "../dist/@types",
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "outDir": "../dist/@types",
    "types": ["node"],
    "typeRoots": ["./@types", "../node_modules/@types"],
    "paths": {
      "*": ["lib/*"]
    }
  }
}
